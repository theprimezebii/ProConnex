<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header') %>
  <title>Payments & Earnings | ProConnex</title>
  <link rel="stylesheet" href="/css/payments.css">
</head>
<body>
  <main class="payments-container" data-aos="fade-up">
    <section class="page-header">
      <h2 class="page-title">ðŸ’° Payments & Earnings</h2>
      <p class="page-subtitle">Track your financial activity on ProConnex.</p>
    </section>

    <% if (userType === 'freelancer') { %>
      <section class="payments-summary freelancer">
        <div class="summary-card">
          <h3>Total Earnings</h3>
          <p class="amount">$<%= totalEarnings %></p>
          <a href="/withdraw" class="btn btn-primary">Withdraw Funds</a>
        </div>
      </section>
    <% } else if (userType === 'client') { %>
      <section class="payments-summary client">
        <div class="summary-card">
          <h3>Total Spent</h3>
          <p class="amount">$<%= totalSpent %></p>
          <a href="/top-up" class="btn btn-primary">Add Funds</a>
        </div>
      </section>
    <% } %>

    <section class="transactions">
      <h3 class="section-title">ðŸ§¾ Transaction History</h3>

      <% if (transactions && transactions.length > 0) { %>
        <div class="transaction-table-wrapper">
          <table class="transaction-table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount (USD)</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(tx => { %>
                <tr>
                  <td><%= tx.date %></td>
                  <td><%= tx.type %></td>
                  <td>$<%= tx.amount %></td>
                  <td class="status <%= tx.status.toLowerCase() %>"><%= tx.status %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="no-transactions-msg">ðŸš« No transactions found.</p>
      <% } %>
    </section>
  </main>

  <%- include('partials/footer', { currentPage: 'payments' }) %>
  <script src="/js/main.js"></script>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>
